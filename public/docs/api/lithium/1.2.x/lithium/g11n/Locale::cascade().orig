						<section id="source" class="section">
				<h3 class="h-beta">Source</h3>
				<div id="source" class="source-display">
					<div class="source-wrapper">
						<pre class="source-code"><code class="language-php">	public static function cascade($locale) {
		$locales[] = $locale;

		if ($locale === &#039;root&#039;) {
			return $locales;
		}
		$tags = static::decompose($locale);

		while (count($tags) &gt; 1) {
			array_pop($tags);
			$locales[] = static::compose($tags);
		}
		$locales[] = &#039;root&#039;;
		return $locales;
	}</code></pre>

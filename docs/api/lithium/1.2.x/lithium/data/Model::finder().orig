						<section id="source" class="section">
				<h3 class="h-beta">Source</h3>
				<div id="source" class="source-display">
					<div class="source-wrapper">
						<pre class="source-code"><code class="language-php">	public static function finder($name, $finder = null) {
		$self = static::object();

		if ($finder === null) {
			return isset($self-&gt;_finders[$name]) ? $self-&gt;_finders[$name] : null;
		}
		if (is_array($finder)) {
			$finder = function($params, $next) use ($finder) {
				$params[&#039;options&#039;] = Set::merge($params[&#039;options&#039;], $finder);
				return $next($params);
			};
		}
		$self-&gt;_finders[$name] = $finder;
	}</code></pre>
